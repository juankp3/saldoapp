<odoo>
  <record id="saldoapp.view_partner_form" model="ir.ui.view">
    <field name="name">view.res.partner.form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='function']" position="before">
        <field name="fecha_cumple" />
      </xpath>
    </field>
  </record>

  <!-- ACCIÓN DE SERVIDOR -->
  <record id="saldoapp.action_server_perfil" model="ir.actions.server">
    <field name="name">Mi Perfil</field>
    <field name="model_id" ref="base.model_res_users" />
    <field name="state">code</field>
    <field name="code">action = model.action_mi_perfil()</field>
  </record>
  <!-- action_mi_perfil: Función de Python -->
</odoo>